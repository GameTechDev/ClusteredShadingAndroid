//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------

Texture2D GUITexture : register( t0 );
SamplerState samLinear : register( s0 );

struct PS_INPUT
{ 
    float4 Pos : SV_POSITION;    
    float2 Tex : TEXCOORD;
    float4 Color: COLOR;
};

// alpha blended texture modulated by vertex color
float4 PS( PS_INPUT input) : SV_Target
{
    return GUITexture.Sample( samLinear, input.Tex ).rrrr * input.Color;  
}


